<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Numbe</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        ::-webkit-scrollbar {
            width: 0px;
        }


        .displayInicial {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        h1 {
            margin-bottom: 20px;
            font-size: 2.5em;
            color: #333;
        }

        button {
            padding: 15px 30px;
            font-size: 1.2em;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #45a049;
        }

        .main {
            width: 100%;
            max-width: 600px;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            display: flex;
            justify-content: space-around;
            display: none;
        }

        .container {
            width: 90%;
            max-width: 600px;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .inputs-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .inputs-container input {
            width: 80%;
            height: 20vh;
            border: 3px solid #4CAF50;
            border-radius: 5px;
            font-size: 5rem;
            text-align: center;
            line-height: 20vh;
            display: flex;
            justify-content: center;
            margin-top: 5vh;
        }


        .inputs-container input:focus {
            border-color: #2E8B57;
            outline: none;
        }

        .button-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .button-container button {
            width: 82%;
            padding: 12px;
            border: none;
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }

        .button-container button:hover {
            background-color: #45a049;
        }

        .my-number-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
        }

        .my-number-container div {
            width: 73%;
            height: 20vh;
            padding: 8%;
            border-radius: 5px;
            font-size: 7rem;
            display: flex;
            justify-content: center;
        }

        .tent-list-container {
            width: 20%;
            height: 71vh;
            overflow-y: auto;
            scroll-behavior: smooth;
            margin-left: 5%;
            max-width: 600px;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .tent-list-container div {
            display: flex;
            justify-content: center;
        }

        .tent-list-container .element {
            display: flex;
            justify-content: space-between;
            padding: 2%;
        }

        .tent-list-container .element div {
            width: 20%;
            border-radius: 5px;
            border: 1px solid #45a049;
            padding: 5px;
        }

        .tent-list-container .element div:first-child {
            width: 40%;
            border-radius: 5px;
            border: 1px solid #45a049;
            padding: 5px;
        }

        @media (max-width: 600px) {

            .inputs-container input {
                width: 100%;
                height: 15vh;
            }

            .main {
                flex-direction: column;
            }

            .tent-list-container {
                width: 90%;
                margin-top: 5vh;
                margin-left: 0px;
                height: 100px;
            }
        }
    </style>
</head>

<body>
    <div class="displayInicial">
        <h1>numbe</h1>
        <button id="btnInciar">Jogar</button>
    </div>
    <div class="main">
        <div class="container">
            <!-- Primeira div com inputs -->
            <div class="inputs-container">
                <input type="number" id="input-chute" max="9999" min="0" oninput="limitDigits(this)">

                <script>
                    function limitDigits(input) {
                        let value = input.value;
                        if (value.length > 4) {
                            input.value = value.slice(0, 4);  // Limita a 4 dígitos
                        }
                    }
                </script>
            </div>

            <!-- Botão Checar -->
            <div class="button-container">
                <button id="btnChecar">Checar</button>
            </div>

            <!-- Segunda div com inputs -->
            <div class="my-number-container">
                <div id="random-number"></div>
            </div>

            <button id="btnReiniciar">Reiniciar</button>

        </div>
        <div class="tent-list-container">

        </div>
    </div>

    <script>
        const displayInicial = document.querySelector(".displayInicial");
        const displayPrincipal = document.querySelector(".main");
        const botaoIniciar = document.getElementById('btnInciar');
        const divRandomNumber = document.getElementById('random-number');
        const btnChecar = document.getElementById("btnChecar");

        botaoIniciar.addEventListener('click', async () => {
            const random_number = Math.floor(1000 + Math.random() * 9000);

            try {
                const response = await fetch('http://localhost:3000/api/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ random_number })
                });

                const dados = await response.json();
                console.log(dados);

                if (dados.status == 0) {
                    alert("Numero Máximo de Jogadores Alcançado.");
                } else {
                    localStorage.randomNumber = random_number;
                    localStorage.Key = dados.key;
                    divRandomNumber.innerText = localStorage.randomNumber;

                    displayInicial.style.display = "none";
                    displayPrincipal.style.display = "flex";
                }


            } catch (error) {
                console.error('Erro:', error);
            }
        });

        btnChecar.addEventListener('click', async () => {
            let key = localStorage.Key;
            let input = document.getElementById("input-chute");
            let chute = input.value;

            console.log("Chave atual do jogador: ", key);
            console.log("Chute dado pelo jogador: ", chute);


            try {
                const connection = await fetch(`http://localhost:3000/api/find/${key}/${chute}`);
                const dados = await connection.json();
                console.log(dados);
                localStorage.numeroExterno = dados.numeroExterno;


                if (dados.numerosContidos !== undefined) {
                    console.log(`Você acertou ${dados.numerosContidos} números!`);

                    const listaDeTentativas = document.querySelector(".tent-list-container");
                    let tentativa = document.createElement('div');


                    let numeroDoChute = document.createElement('div');
                    let acertosDoChute = document.createElement('div');

                    numeroDoChute.innerText = chute;
                    acertosDoChute.innerText = dados.numerosContidos;

                    tentativa.setAttribute('class', 'element');

                    tentativa.appendChild(numeroDoChute);
                    tentativa.appendChild(acertosDoChute);

                    listaDeTentativas.insertBefore(tentativa, listaDeTentativas.firstChild);
                } else if (dados.API) {
                    console.log(dados.API);

                    const response = await fetch('http://localhost:3000/api/game/status/:time', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ time: 2 })
                    });

                    const status = await response.json();
                    console.log(status);

                    alert("Parabens vc acertou!");
                }

            } catch (err) {
                console.log(err);
            }
        });

        btnReiniciar.addEventListener('click', async () => {
            let key = localStorage.Key;

            try {
                const connection = await fetch(`http://localhost:3000/api/delete/${key}`);
                const dados = await connection.json();
                console.log(dados);

                localStorage.randomNumber = 0;
                localStorage.Key = 0;
                divRandomNumber.innerText = 0;
                location.reload();

            } catch (err) {
                console.log(err);
            }
        });

        setInterval(async () => {
            const connection = await fetch(`http://localhost:3000/api/game/status/`);
            const dados = await connection.json();
            if (dados.time == 2) {
                alert("Numero descoberto");
            }
        }, 1000);

    </script>
</body>

</html>